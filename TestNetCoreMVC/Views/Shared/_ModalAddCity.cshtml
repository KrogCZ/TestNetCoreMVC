
<div class="modal fade" id="addCityModal" tabindex="-1" role="dialog" aria-labelledby="addCityModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCityModalLabel">Add city</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="AddCity" asp-controller="Home">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-check-label" for="name">Name</label>
                        <input id="name" class="form-control" name="name" required="required"/>
                    </div>
                    <div class="form-group">
                        <label class="form-check-label" for="population">Population</label>
                        <input id="population" class="form-control" name="population" required="required" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-primary" value="Save" />
                </div>
            </form>
        </div>
    </div>
</div>
